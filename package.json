{
  "name": "pgn-monorepo",
  "version": "1.0.0",
  "description": "Monorepo containing React Native mobile app and Next.js web application",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/mobile",
    "apps/web"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run build:shared",
    "clean": "npm run clean:mobile && npm run clean:web && npm run clean:shared",
    "clean:mobile": "cd apps/mobile && npm run clean || rm -rf node_modules",
    "clean:web": "cd apps/web && rm -rf .next node_modules",
    "clean:shared": "cd packages/shared && npm run clean",
    "build": "npm run build:shared && npm run build:mobile && npm run build:web",
    "build:mobile": "cd apps/mobile && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:shared": "cd packages/shared && npm run build",
    "dev": "concurrently \"npm run dev:shared\" \"npm run dev:mobile\" \"npm run dev:web\"",
    "dev:mobile": "cd apps/mobile && npm start",
    "dev:web": "cd apps/web && npm run dev",
    "dev:shared": "cd packages/shared && npm run dev",
    "test": "npm run test:mobile && npm run test:web && npm run test:shared",
    "test:mobile": "cd apps/mobile && npm test",
    "test:web": "cd apps/web && npm test",
    "test:shared": "cd packages/shared && npm test",
    "lint": "npm run lint:mobile && npm run lint:web && npm run lint:shared",
    "lint:mobile": "cd apps/mobile && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:shared": "cd packages/shared && npm run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.0.0",
    "shadcn": "^3.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5"
  }
}
